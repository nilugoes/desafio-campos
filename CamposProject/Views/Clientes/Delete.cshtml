@model CamposProject.Entidades.Cliente

@{
    ViewData["Title"] = "Delete";
}


<h3>Você tem certeza que deseja deletar?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome do cliente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NmCliente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cidade)
        </dt>
        <dd class = "col-sm-10">

@model CamposProject.Entidades.Produto

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-3">
            Descriçao do produto 
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.DscProduto)
        </dd>
        <dt class = "col-sm-3">
            Valor do produto
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.VlrProduto)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IdProduto">Editar</a> |
    <a asp-action="Index">Voltar</a>
</div>
